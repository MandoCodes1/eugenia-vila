---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getFeaturedReviews } from '~/utils/reviews';

const metadata = {
  title: 'Dra. Eugenia Vila - Clínica Dental en Málaga',
  description: 'Clínica dental en El Palo, Málaga. Más de 30 años de experiencia en implantes dentales, cirugía oral, alineadores y odontología estética. Dentista galardonada con materiales de alta calidad y precios competitivos.',
  ignoreTitleTemplate: true,
};

const featuredReviews = getFeaturedReviews(6);
const testimonials = featuredReviews.map(review => ({
  testimonial: review.text_es,
  name: review.name,
  job: review.clinic === 'malaga' ? 'Málaga' : review.clinic === 'balham' ? 'Londres (Balham)' : 'Londres (Finchley)',
  image: {
    src: review.avatar.startsWith('http') ? review.avatar : undefined,
    alt: review.name,
  },
  rating: review.rating,
}));
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Reservar Cita por WhatsApp',
        href: 'https://wa.me/34679975580?text=Hola,%20me%20gustaría%20reservar%20una%20cita',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
      { text: 'Más Información', href: '#sobre-mi' },
    ]}
    image={{ src: 'https://placehold.co/800x1000/3b82f6/ffffff?text=Dra.+Eugenia+Vila', alt: 'Dra. Eugenia Vila' }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Sonrisas Perfectas</span> con Más de
      <span class="text-accent dark:text-white">30 Años de Experiencia</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="block mb-2">
        Especialista en <span class="font-semibold">implantes dentales, alineadores y odontología estética</span>.
      </span>
      <span class="block">
        Dentista galardonada con materiales de alta calidad y precios competitivos. Clínica dental en El Palo, Málaga.
      </span>
    </Fragment>
  </Hero>

  <!-- About Section -->
  <Content
    id="sobre-mi"
    tagline="Sobre la Dra. Vila"
    title="Experiencia, Calidad y Dedicación"
    items={[
      {
        title: 'Más de 30 Años de Experiencia',
        description:
          'Con más de tres décadas de práctica clínica, he tratado a más de 20,000 pacientes con dedicación y cuidado personalizado.',
      },
      {
        title: 'Formación de Élite',
        description:
          'Máster en Implantología Dental (UIC Barcelona) y Máster en Estética (Universidad de Córdoba). Licenciada en Medicina y Odontología.',
      },
      {
        title: 'Dentista del Año 2024',
        description:
          'Galardonada por Dental Art Implant Clinic por resultados clínicos excepcionales y satisfacción del paciente.',
      },
      {
        title: 'Enfoque Holístico',
        description:
          'Mi formación en medicina me permite ofrecer un enfoque integral del cuidado dental, siempre poniendo los intereses del paciente primero.',
      },
    ]}
    image={{
      src: 'https://placehold.co/600x800/6366f1/ffffff?text=Professional+Photo',
      alt: 'Dra. Eugenia Vila en su clínica',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Una Dentista que Realmente se Preocupa
      </h3>
      <p class="text-lg text-muted mb-4">
        Con licenciaturas tanto en Medicina como en Odontología, ofrezco un enfoque holístico y personalizado para cada
        paciente. Mi pasión es crear sonrisas hermosas y saludables que duren toda la vida.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Services Preview -->
  <Features
    id="servicios"
    tagline="Nuestros Servicios"
    title="Tratamientos Dentales Especializados"
    subtitle="Con tecnología de vanguardia y materiales de la más alta calidad"
    items={[
      {
        title: 'Implantes Dentales',
        description:
          'Rehabilitación completa con flujo de trabajo digital (CBCT, 3Shape, Medit). Especialista en colocación de implantes, injertos óseos y elevaciones de seno maxilar.',
        icon: 'tabler:dental',
      },
      {
        title: 'Cirugía Oral',
        description:
          'Extracciones complejas, muelas del juicio y procedimientos quirúrgicos avanzados. Atención especializada con más de 30 años de experiencia.',
        icon: 'tabler:medical-cross',
      },
      {
        title: 'Alineadores',
        description:
          'Tratamiento con alineadores transparentes para corrección de sonrisa sin brackets tradicionales. Resultados predecibles y cómodos.',
        icon: 'tabler:dental-off',
      },
      {
        title: 'Odontología Estética',
        description:
          'Carillas de porcelana, bonding y diseño de sonrisa personalizado. Resultados naturales y hermosos que transforman tu sonrisa.',
        icon: 'tabler:sparkles',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-slate-900"></div>
    </Fragment>
  </Features>

  <!-- Stats Section -->
  <Stats
    stats={[
      { title: 'Años de Experiencia', amount: '30+' },
      { title: 'Pacientes Tratados', amount: '20,000+' },
      { title: 'Implantes Colocados', amount: 'Miles' },
      { title: 'Reseñas 5 Estrellas', amount: '60+' },
    ]}
  />

  <!-- Testimonials Section -->
  <Testimonials
    title="Lo Que Dicen Nuestros Pacientes"
    subtitle="Más de 60 reseñas de 5 estrellas en Google y Trustpilot"
    testimonials={testimonials}
    callToAction={{
      text: 'Ver Todas las Reseñas',
      href: '/resenas',
    }}
  />

  <!-- Call to Action -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Reservar por WhatsApp',
        href: 'https://wa.me/34679975580?text=Hola,%20me%20gustaría%20reservar%20una%20cita',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  >
    <Fragment slot="title">¿Lista/o para Tu Mejor Sonrisa?</Fragment>

    <Fragment slot="subtitle">
      Contáctanos por WhatsApp para reservar tu consulta.<br />
      <span class="text-sm text-muted">
        Clínica abierta fines de semana selectos cuando la Dra. Vila está en Málaga.
      </span>
    </Fragment>
  </CallToAction>
</Layout>
