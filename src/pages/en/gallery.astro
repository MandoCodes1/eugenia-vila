---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import BeforeAfterGallery from '~/components/widgets/BeforeAfterGallery.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Case Gallery - Dr. Eugenia Vila',
  description: 'See real transformations from our patients. Cases of dental implants, aligners and cosmetic dentistry with impressive results.',
};

// Gallery cases - placeholder examples until real images are added
const cases = [
  {
    title: 'Complete Smile Transformation',
    description: 'Treatment with veneers and cosmetic bonding',
    beforeImage: 'https://placehold.co/600x400/e5e7eb/6b7280?text=Before',
    afterImage: 'https://placehold.co/600x400/3b82f6/ffffff?text=After',
    beforeAlt: 'Smile before treatment',
    afterAlt: 'Smile after treatment',
  },
  // More cases can be added here as they become available
];
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero2
    tagline="Case Gallery"
    title="Real Transformations from Our Patients"
    subtitle="Every smile tells a story of transformation. See the impressive results we've achieved for our patients through dental implants, aligners and cosmetic dentistry."
  />

  <!-- Gallery Section -->
  <section class="px-4 py-16 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="mb-12 text-center">
      <h2 class="text-3xl font-bold mb-4">Before and After Cases</h2>
      <p class="text-lg text-muted max-w-3xl mx-auto">
        These are real examples of the transformations we've achieved. Each case is unique and specifically designed for
        the individual needs of each patient, using the highest quality materials and advanced techniques.
      </p>
    </div>

    <BeforeAfterGallery cases={cases} language="en" />

    <div class="mt-12 p-8 bg-blue-50 dark:bg-slate-800 rounded-lg text-center">
      <h3 class="text-2xl font-bold mb-4">More Cases Coming Soon?</h3>
      <p class="text-muted mb-6 max-w-2xl mx-auto">
        We are in the process of adding more transformation cases to our gallery. In the meantime, you can view detailed
        reviews from our satisfied patients on our reviews page.
      </p>
      <a
        href="/en/reviews"
        class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-full font-semibold hover:bg-secondary transition-colors"
      >
        View Patient Reviews
      </a>
    </div>
  </section>

  <!-- Features Section -->
  <section class="px-4 py-16 mx-auto max-w-7xl sm:px-6 lg:px-8 bg-white dark:bg-slate-900">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">Our Commitment to Excellence</h2>
    </div>
    <div class="grid md:grid-cols-3 gap-8">
      <div class="text-center p-6">
        <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Natural Results</h3>
        <p class="text-muted">
          Each treatment is designed to look and feel natural, enhancing your smile while maintaining your unique
          appearance.
        </p>
      </div>
      <div class="text-center p-6">
        <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Long-Lasting Results</h3>
        <p class="text-muted">
          We use only the highest quality materials that guarantee results that will last many years with proper care.
        </p>
      </div>
      <div class="text-center p-6">
        <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Satisfied Patients</h3>
        <p class="text-muted">
          Over 20,000 successfully treated patients and more than 60 five-star reviews confirm our dedication to
          excellence.
        </p>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book Free Consultation',
        href: 'https://wa.me/34679975580?text=Hello,%20I%20would%20like%20a%20free%20consultation',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  >
    <Fragment slot="title">Ready for Your Own Transformation?</Fragment>

    <Fragment slot="subtitle">
      Contact us today for a free consultation and discover how we can create your dream smile.
    </Fragment>
  </CallToAction>
</Layout>

